<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Foglalás</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <form action="/foglalas" method="post">


            <div class="form-group">
              <label for="name">Név</label>
              <input type="name" class="form-control" name="name" placeholder="Név" value="<%=name%>">
            </div>

            <div class="form-group">
              <label for="email">Email cím</label>
              <input type="email" class="form-control" placeholder="Email cím" value="<%=email%>" name="email">
            </div>

            <div class="form-group">
                <label for="date">Időpont</label>
                <input type="date" name="date"class="form-control" placeholder="Dátum" value="<%=date%>">
            </div>
            <%=date%>
            <div class="form-group">
                <label for="guests">Vendégek száma</label>
                <input type="number" class="form-control" placeholder="Vendégek száma(1-10)" value="<%=guests%>" min="1" max="10" name="guests">
            </div>

            <% errors.forEach(error => { %>
                <div class="alert alert-danger">
                    <%=error%>
                </div>
            <% }); %>
                
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

    </div>
</body>
</html>